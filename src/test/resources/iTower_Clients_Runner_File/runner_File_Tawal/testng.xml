<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Tawal Test Automation Suite">
	<listeners>
		<listener class-name="allureListeners.AllureListener"></listener>
	</listeners>

	<test name="Run Test script for Add RTTS Ticket from Postman">
		<classes>
			<class name="testCases.clients.Tawal.TheTroubleTicketAPI">
				<methods>
					<include name="getTokenAPI"></include>
					<include name="ticketCreationAPI"></include>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Run Test script for Trouble Ticketing">

		<classes>
			<class name="testCases.clients.Tawal.TheTroubleTicketing">
				<methods>
					<exclude name="verifyResolvedTheRTTSticket"></exclude>
					<exclude name="verifyClosedTheRTTSticket"></exclude>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Run Test script for Reject RTTS Ticket from Postman">
		<classes>
			<class name="testCases.clients.Tawal.TheTroubleTicketAPI">
				<methods>
					<include name="getTokenAPI"></include>
					<include name="TicketUpdateToReject"></include>
				</methods>
			</class>
		</classes>
	</test>

	<test
		name="Run Test Script For Restore The RTTS ticket After Reject From Postman ">
		<classes>
			<class name="testCases.clients.Tawal.TheTroubleTicketing">
				<methods>

					<include name="verifyRestoreTheRTTSticket"></include>
				</methods>
			</class>
		</classes>
	</test>
	<test
		name="Run Test Script For After RTTS Ticket Restored then RTTS will Approve From Postman ">
		<classes>
			<class name="testCases.clients.Tawal.TheTroubleTicketAPI">
				<methods>
					<include name="getTokenAPI"></include>
					<include name="TicketUpdateToApprove"></include>
				</methods>
			</class>
		</classes>
	</test>
	<test
		name="Run Test Script For Resolved The RTTS ticket After Reject From Postman ">
		<classes>
			<class name="testCases.clients.Tawal.TheTroubleTicketing">
				<methods>
					<include name="verifyResolvedTheRTTSticket"></include>
				</methods>
			</class>
		</classes>
	</test>
	<test
		name="Run Test Script For closure will be done from RTTS From Postman ">
		<classes>
			<class name="testCases.clients.Tawal.TheTroubleTicketAPI">
				<methods>
					<include
						name="getTokenAPI"></include>
					<include
						name="TicketUpdateToClose"></include>
				</methods>
			</class>
		</classes>
	</test>
	<test name="Run Test Script For closed status should be updated at TMS end">
		<classes>
			<class name="testCases.clients.Tawal.TheTroubleTicketing">
				<methods>
					<include name="verifyClosedTheRTTSticket"></include>
				</methods>
			</class>
		</classes>
	</test>
</suite>